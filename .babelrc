{

	presets: [
		'es2015',
		'react'
	],

	env: {

		"node": {

			plugins: [
		        [
		            "css-modules-transform", {
		                "preprocessCss": "./tools/babel-scss-loader.js",
		                "generateScopedName": '[name]__[local]__[hash:base64:8]',
		                "extensions": [".scss"]
		            }
		        ]
		    ]
		
		}

	}

}