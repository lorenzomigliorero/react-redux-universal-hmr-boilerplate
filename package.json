{
  "name": "react-redux-universal-hmr-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "better-npm-run dev",
    "component": "babel-node ./tools/component/index.js",
    "build:client": "better-npm-run build:client",
    "build:static": "better-npm-run build:static",
    "build:server": "better-npm-run build:server",
    "build": "better-npm-run build",
    "start": "node dist/server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lorenzomigliorero/react-redux-universal-hmr-boilerplate.git"
  },
  "author": "Lorenzo Migliorero <lorenzomigliorero@gmail.com> (http://lorenzomigliorero.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lorenzomigliorero/react-redux-universal-hmr-boilerplate/issues"
  },
  "homepage": "https://github.com/lorenzomigliorero/react-redux-universal-hmr-boilerplate#readme",
  "betterScripts": {
    "dev": {
      "command": "babel-node tools/webpack-dev-server.js",
      "env": {
        "NODE_ENV": "development",
        "PORT": 3001
      }
    },
    "build:client": {
      "command": "npm run clean && webpack -p --progress --hide-modules --config tools/webpack-config/client.babel.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "build:static": {
      "command": "npm run clean && webpack -p --progress --hide-modules --config tools/webpack-config/client.babel.js",
      "env": {
        "NODE_ENV": "production",
        "STATIC": true
      }
    },
    "build:server": {
      "command": "webpack --progress --hide-modules --config tools/webpack-config/server.babel.js",
      "env": {
        "NODE_ENV": "production",
        "BABEL_ENV": "node"
      }
    },
    "build": {
      "command": "npm run build:client && npm run build:server",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "dependencies": {
    "compression": "1.6.2",
    "express": "4.15.3",
    "html-minifier": "3.5.2",
    "prop-types": "15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-helmet": "5.1.3",
    "react-redux": "5.0.5",
    "react-router-dom": "4.1.1",
    "react-svg-inline": "2.0.0",
    "redux": "^3.7.1",
    "redux-simple-router": "2.0.4",
    "redux-thunk": "2.2.0"
  },
  "devDependencies": {
    "autoprefixer": "7.1.1",
    "babel-cli": "6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "7.2.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-plugin-css-modules-transform": "1.2.7",
    "babel-plugin-react-transform": "2.0.2",
    "babel-plugin-syntax-export-extensions": "6.13.0",
    "babel-plugin-transform-export-extensions": "6.22.0",
    "babel-plugin-transform-object-rest-spread": "6.23.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-register": "6.24.1",
    "better-npm-run": "0.0.15",
    "css-loader": "^0.28.4",
    "ejs": "2.5.6",
    "ejs-loader": "0.3.0",
    "eslint": "3.19.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-loader": "^1.8.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-react": "^7.1.0",
    "extract-text-webpack-plugin": "^2.1.2",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.29.0",
    "image-webpack-loader": "3.3.1",
    "inquirer": "^3.1.1",
    "lodash": "4.17.4",
    "node-sass": "4.5.3",
    "node-sass-json-importer": "3.0.2",
    "postcss": "^6.0.5",
    "postcss-loader": "^2.0.6",
    "postcss-modules-values": "1.3.0",
    "postcss-scss": "^1.0.2",
    "raw-loader": "0.5.1",
    "react-transform-hmr": "1.0.4",
    "rimraf": "2.6.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "webpack": "^3.0.0",
    "webpack-assets-manifest": "^0.7.0",
    "webpack-dev-middleware": "^1.11.0",
    "webpack-hot-middleware": "^2.18.1",
    "webpack-manifest-plugin": "1.1.0",
    "webpack-node-externals": "1.6.0"
  }
}
